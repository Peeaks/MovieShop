@model DLL.Entities.Order
@{
    ViewBag.Title = "ThankYou";
}

<h2>Thank you for shopping at the Pineapple Inc. Movie Shop</h2>

<div class="container">
<div class="row">
    <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
                <address>
                    <strong>Pineapple Inc.</strong>
                    <br>
                    2135 Pineapple Road
                    <br>
                    Esbjerg, DK 6705
                    <br>
                    <abbr title="Phone">P:</abbr> +45 75154355
                </address>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                <p>
                    <em>Time: @DateTime.Now</em>
                </p>
                <p>
                    <em>Receipt #: @Model.Id</em>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="text-center">
                <h1>Receipt</h1>
            </div>
            </span>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Product</th>
                    <th></th>
                    <th>Discount</th>
                    <th class="text-center">Price</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="col-md-9">
                        <em>@Model.Movie.Title</em>
                    </td>
                    <td></td>
                    @if (@Model.PromoCode != null) {
                        <td>@Model.PromoCode.Discount%</td>
                    } else {
                        <td>0%</td>
                    }
                    <td class="col-md-1 text-center">@Model.TotalPrice</td>
                </tr>
                <tr>
                    <td> </td>
                    <td> </td>
                    <td class="text-right">
                        <h4>
                            <strong>Total: </strong>
                        </h4>
                    </td>
                    <td class="text-center text-danger">
                        <h4>
                            <strong></strong>@Model.TotalPrice</h4>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>